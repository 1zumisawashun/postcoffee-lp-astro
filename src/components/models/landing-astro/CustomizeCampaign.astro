---
import Button from "../../uis/astro/Button.astro";

const campaigns = [
  "ずっと全国送料無料",
  "折りたたみドリッパープレゼント",
  "スタートブックプレゼント",
  "オリジナルステッカープレゼント",
];
---

<div class="customize-campaign-container">
  <p class="base-title">月々¥1,480~（税込¥1,598~）</p>
  <p class="base-text custom-text">4つの特典</p>
  <div class="block">
    {
      campaigns.map((campaign, index) => (
        <div class="wrapper">
          <div class="panel">
            <p class="base-text -bold">{`特典${index + 1}`}</p>
          </div>
          <p class="base-text">{campaign}</p>
        </div>
      ))
    }
  </div>
  <Button fullwidth>無料でコーヒー診断をする</Button>
</div>

<style>
  @import "../../../functions/styles/base-title.css";
  @import "../../../functions/styles/base-text.css";
  .customize-campaign-container {
    width: 60%;
    margin: auto;
    display: grid;
    gap: 30px;
    text-align: center;
  }
  .block {
    display: flex;
    background-color: white;
  }
  .wrapper {
    width: 20%;
    margin: 20px auto;
    background-color: white;
  }
  .panel {
    background-color: #f1f1f1;
    padding: 10px 0;
    margin-bottom: 10px;
  }
  .custom-text {
    padding: 10px;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
  }
</style>
