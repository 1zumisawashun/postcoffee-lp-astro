---
import StepCard from "../../uis/StepCard.astro";
import { steps } from "../../../functions/constants/steps";
import { BaseContainer } from "../../../functions/themes";

const formatSteps = [steps[0], steps[1], steps[2], steps[3]];
---

<BaseContainer client:only="react">
  <div class="step-wrapper">
    {formatSteps.map((step) => <StepCard step={step} />)}
  </div>
</BaseContainer>

<style>
  .step-wrapper {
    width: 90%;
    display: flex;
    margin: auto;
    gap: 2%;
  }
</style>
