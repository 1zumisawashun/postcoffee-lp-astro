---
import FlexCard from "../../uis/astro/FlexCard.astro";
import { stores } from "../../../functions/constants/stores";
---

{
  stores.map((store) => (
    <div class="base-container -white" >
      <FlexCard card={store} />
    </div>
  ))
}

<style>
  .base-container {
    background-color: #f1f1f1;
    padding: 30px;
  }
  .base-container.-white {
    background-color: white;
  }
  .base-container.-center {
    text-align: center;
  }
</style>
